generator client {
  provider = "prisma-client-js"
}

datasource vacancy {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // ← ВЕРНИ ЭТУ СТРОКУ
}

// ============ USERS ============
model User {
  id            String   @id @default(cuid())
  telegramId    BigInt   @unique
  username      String?
  firstName     String?
  lastName      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  subscriptions Subscription[]
  settings      UserSettings?
}

model UserSettings {
  id                String  @id @default(cuid())
  userId            String  @unique
  language          String  @default("ru")
  notificationsOn   Boolean @default(true)
  maxNotifications  Int     @default(10)
  
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============ SUBSCRIPTIONS ============
model Subscription {
  id              String   @id @default(cuid())
  userId          String
  isActive        Boolean  @default(true)
  
  filters         Json
  sources         String[]
  
  lastNotified    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isActive])
}

// ============ VACANCIES ============
model Vacancy {
  id              String   @id @default(cuid())
  
  title           String
  company         String
  description     String
  location        String?
  salaryMin       Int?
  salaryMax       Int?
  salaryCurrency  String?
  experience      String?
  employment      String?
  schedule        String?
  skills          String[]
  
  source          String
  sourceId        String
  sourceUrl       String
  publishedAt     DateTime
  
  rawData         Json

  workLocationType String? // Тип локации (внутренняя/международная)
  
  // === НОВЫЕ ПОЛЯ ДЛЯ СЛОВАРИКОВ (гибридная схема) ===
  category                String?  // Каноническое название профессии для быстрого поиска
  professionDictionaryIds String[] @default([]) // Ссылки на словарики источников

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([source, sourceId])
  @@index([source, publishedAt])
  @@index([location])
  @@index([salaryMin, salaryMax])
  @@index([category])  // Для быстрого поиска по категории
  @@index([workLocationType])  // Для фильтрации по локации (Молдова/за границей)
  @@index([professionDictionaryIds])  // Для поиска вакансий по словарикам
}

// ============ LOGS ============
model ParseLog {
  id              String   @id @default(cuid())
  source          String
  searchQuery     String?  // Поисковый запрос для отслеживания парсинга
  status          String
  vacanciesFound  Int      @default(0)
  vacanciesNew    Int      @default(0)
  duration        Int
  error           String?
  
  createdAt       DateTime @default(now())
  
  @@index([source, searchQuery, createdAt])
}

// ============ PROFESSION DICTIONARIES ============
model ProfessionDictionary {
  id              String   @id @default(cuid())
  source          String   // 'rabota.md', '999.md', 'makler.md'
  profession      String   // Название специальности
  professionId    String?  // ID специальности на сайте (если есть)
  category        String?  // Категория (например, 'IT', 'Строительство')
  synonyms        String[] // Синонимы для семантического поиска
  vacancyCount    Int?     // Количество вакансий по этой специальности
  lastCheckedAt   DateTime? // Время последней проверки количества
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([source, profession])
  @@index([source])
  @@index([category])
  @@index([vacancyCount])
}